# Anonyma API Configuration
# Copy this file to .env and configure as needed

# =============================================================================
# Application Settings
# =============================================================================
ANONYMA_APP_NAME=Anonyma API
ANONYMA_APP_VERSION=1.0.0
ANONYMA_DEBUG=false

# =============================================================================
# Server Settings
# =============================================================================
ANONYMA_HOST=0.0.0.0
ANONYMA_PORT=8000
ANONYMA_WORKERS=4

# =============================================================================
# Redis Configuration (Optional - for job persistence and caching)
# =============================================================================
# Set to true to enable Redis
ANONYMA_REDIS_ENABLED=false
ANONYMA_REDIS_HOST=localhost
ANONYMA_REDIS_PORT=6379
# ANONYMA_REDIS_PASSWORD=your_redis_password_here
ANONYMA_REDIS_DB=0
ANONYMA_REDIS_JOB_TTL=86400

# =============================================================================
# Authentication (Optional - for API security)
# =============================================================================
# Set to true to require API keys for all endpoints
ANONYMA_AUTH_ENABLED=false
ANONYMA_API_KEY_HEADER=X-API-Key
# Generate a secure master key: python -c "import secrets; print(secrets.token_urlsafe(32))"
# ANONYMA_MASTER_API_KEY=your_secure_master_key_here

# =============================================================================
# Rate Limiting (Optional - to prevent abuse)
# =============================================================================
# Set to true to enable rate limiting
ANONYMA_RATE_LIMIT_ENABLED=false
ANONYMA_RATE_LIMIT_REQUESTS=100
ANONYMA_RATE_LIMIT_WINDOW=60

# =============================================================================
# File Processing Settings
# =============================================================================
ANONYMA_MAX_FILE_SIZE=104857600
ANONYMA_TEMP_DIR=/tmp/anonyma_api
ANONYMA_TEMP_FILE_TTL=86400

# =============================================================================
# Performance Settings
# =============================================================================
ANONYMA_BACKGROUND_WORKERS=4
ANONYMA_ENABLE_CACHING=true
ANONYMA_CACHE_TTL=3600

# =============================================================================
# Example Production Configuration
# =============================================================================
# ANONYMA_DEBUG=false
# ANONYMA_REDIS_ENABLED=true
# ANONYMA_REDIS_HOST=redis
# ANONYMA_REDIS_PORT=6379
# ANONYMA_AUTH_ENABLED=true
# ANONYMA_MASTER_API_KEY=<your_secure_key>
# ANONYMA_RATE_LIMIT_ENABLED=true
# ANONYMA_RATE_LIMIT_REQUESTS=1000
# ANONYMA_RATE_LIMIT_WINDOW=3600
# ANONYMA_WORKERS=8
